/* pages/aircondition/aircondition.wxss */
.screen{

  width: 100%;
  height: 300px;
  background-color: #5aa4ae;
  color: #fff;
  font-size: 30px;
}
.airButton{

  width: 100%;
  height: 405px;
  background-color: #f5f2e9;
  color: #5aa4ae;
  text-align: center;
  font-size: 25px;
  font-weight: 600;
}
.modeBox{

  width: 20%;
  height: 100%;
  line-height: 80px;
  font-size: 16px;
  border: 1px solid #ececec;
}
.temperatureBox{

  width: 33%;
  height: 100%;
  line-height: 80px;
  font-size: 22px;
  font-weight: 600;
  border: 1px solid #ececec;
}
.windSpeedBox{

  width: 25%;
  height: 100%;
  line-height: 80px;
  font-size: 19px;
  font-weight: 600;
  border: 1px solid #ececec;

}
.windAutoModeBox{
  width: 33%;
  height: 100%;
  line-height: 80px;
  font-size: 19px;
  font-weight: 600;
  border: 1px solid #ececec;

}
.matching{
  width: 100%;
  height: 80px;
background-color: #5aa4ae;
text-align: center;
font-weight: 600;
color: rgb(255, 255, 255);
line-height: 80px;
font-size: 20px;
}
.temperatureTextBox{

width: 100%;
height: 80%;
display: flex;
align-items: center;
justify-content: center;
}
.temperatureText{

  width: 50%;
  height: 80%;
  display: flex;
margin-left: 40px;
}
.number{
width: 80%;
height: 100%;
font-size: 130px;
}
.sign{
  width: 20%;
height: 100%;
font-size: 50px;

}
.modeTextBox{

  width: 33%;
  font-size: 18px;
text-align: center;
line-height: 40px;

}

.closeState{

  width: 100%;
  text-align: center;
  line-height: 300px;
  font-size: 60px;
}




.bubble{
  position: relative;
  overflow: hidden;
 }

 .bubble:active {
  background-color: #dfdcd5 !important;
  opacity: 1;
  transition: 0.1s;
 }