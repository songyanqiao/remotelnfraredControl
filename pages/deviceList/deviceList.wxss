.deviceList{
  display: flex;
  flex-wrap: wrap;
}



.device{
  margin: 8px;
  width: 45%;
background-color: rgb(249, 224, 255);
border-radius: 10px;

}
.deviceImage{
  width: 50px;
  padding: 10px;
  height: 50px;
}
.deviceName{

  width: 100%;
text-align: center;
  font-size: 18px;
  color: #7a3bcc;
  font-weight: 600;

  margin-bottom: 5px;

}
.deviceID{
padding-bottom: 10px;

  width: 100%;
text-align: center;
  font-size: 11px;
  color: #cda6ff;
  font-weight: 600;


}
.deviceSetting{

  position: fixed;
  bottom: 0;
  width: 100%;
  
}.bubble{
  position: relative;
  overflow: hidden;
 }

 .bubble:active {
  background-color: rgb(216, 196, 221) !important;
  opacity: 1;
  transition: 0.1s;
 }
 .control{
   position: fixed;
   bottom: 80px;
   right: 5px;
   width: 80px;
   color: rgb(24,186,249);
 }